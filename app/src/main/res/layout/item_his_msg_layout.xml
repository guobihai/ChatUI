<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/personLayout"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:layout_marginBottom="1dp"
    >

    <ImageView
        android:id="@+id/imgHeart"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:src="@drawable/person_72"
        android:layout_marginTop="5dp"
        />

    <TextView
        android:id="@+id/tvUnMsg"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:text="1"
        android:gravity="center"
        android:textSize="14sp"
        android:textColor="@android:color/white"
        android:layout_toRightOf="@id/imgHeart"
        android:background="@drawable/heart_circle_bg"
        android:layout_marginLeft="-15dp"
        android:visibility="gone"
        />

    <TextView
        android:id="@+id/tvUserName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgHeart"
        android:text="name"
        android:textColor="@android:color/black"
        android:textSize="16sp"
        />



    <TextView
        android:id="@+id/tvMsgTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="5dp"
        android:layout_marginRight="5dp"
        android:text="12:34"
        android:textSize="16sp"
        />

    <TextView
        android:id="@+id/tvMsgToast"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="5dp"
        android:text="待跟进"
        android:visibility="gone"
        android:textSize="12sp"
        android:background="@drawable/tv_show_verb_bg"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:paddingTop="2dp"
        android:paddingBottom="2dp"
        android:textColor="@android:color/white"
        android:layout_below="@+id/tvMsgTime"
        android:layout_alignTop="@+id/tvHisMsg"
        />

    <com.smart.chatui.widget.GifTextView
        android:id="@+id/tvHisMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvUserName"
        android:layout_marginLeft="16dp"
        android:layout_toRightOf="@+id/imgHeart"
        android:text="您好，欢迎使用羿聊沟通系统"
        android:textColor="@android:color/darker_gray"
        android:textSize="14sp"
        android:singleLine="true"
        android:layout_toLeftOf="@+id/tvMsgToast"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="1dp"
        android:background="#ddd"
        />
</RelativeLayout>